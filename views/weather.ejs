<!DOCTYPE html>
<html lang="en">

<%- include("./partials/header.ejs") %>

    <body>
        <%- include("./partials/navbar.ejs") %>

            <!-- main header -->
            <div class="conatiner-fluid main_header">
                <div class="row">
                    <div class="col-md-10 col-12 mx-auto">

                        <div class="main_content">
                            <form class="temp_form">
                                <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                                <input type="submit" value="search" id="submitBtn">
                            </form>
                        </div>

                        <div class="tempInformation">
                            <div class="top_layer">
                                <p id="day">Tuesday</p>
                                <p id="today_data">13 OCT</p>
                            </div>
                            <div class="main_layer">
                                <p id="city_name">Get output here</p>
                                <div class="middle_layer data_hide">
                                    <p id="temp"><span id="temperature_val">0</span><sup>o</sup>C</p>
                                    <p id="temp_status"> <i class="fa fa-cloud" aria-hidden="true"></i></p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <%- include("./partials/footer.ejs") %>

                <script src="js/main.js"></script>
                <script>
                    const getCurrentDate = () => {
                        var mL = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
                        var mS = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'June', 'July', 'Aug', 'Sept', 'Oct', 'Nov', 'Dec'];
                        let currentTime = new Date();
                        let month=currentTime.getMonth();
                        let currentMonth=mS[month];
                        let date=currentTime.getDate(); 
                        let today_data = document.getElementById("today_data");
                        today_data.innerText = `${date}   ${currentMonth} `;
                        
                    }

                    const getCurrentDay = () => {
                        var weekday = new Array(7);
                        weekday[0] = "Sunday";
                        weekday[1] = "Monday";
                        weekday[2] = "Tuesday";
                        weekday[3] = "Wednesday";
                        weekday[4] = "Thursday";
                        weekday[5] = "Friday";
                        weekday[6] = "Saturday";

                        let currentTime = new Date();
                        let currentday = weekday[currentTime.getDay()];

                        let day = document.getElementById("day");
                        day.innerText = currentday;
                      
                    }
                    getCurrentDay();
                    getCurrentDate();
                </script>
    </body>

</html>